{
    "compilerOptions": {
        "declaration": true,
        "downlevelIteration": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react-jsx",
        "lib": ["es2015", "DOM", "DOM.Iterable"],
        "module": "commonjs",
        "moduleResolution": "node",
        "preserveSymlinks": true,
        "removeComments": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "sourceMap": false,
        "strict": true,
        "target": "es5",
        "types": ["node"]
    },
    "exclude": [".git", "node_modules"],
    "include": ["src/**/*"]
}
